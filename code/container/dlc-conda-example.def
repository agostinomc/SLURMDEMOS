Bootstrap: docker
From: condaforge/miniforge3

%post
    export DEBIAN_FRONTEND=noninteractive
    apt update
    apt upgrade -y

    conda install --quiet --yes \
        'ipyparallel' \
        'notebook' \
        'jupyterhub==4.1.5' \
        'jupyterlab'

    conda install --quiet --yes \
        pandas \
        scikit-learn \
        scipy \
        seaborn

    conda install --quiet --yes --channel pytorch --channel nvidia \
        pytorch \
        pytorch-cuda=12.1 \
        torchvision
